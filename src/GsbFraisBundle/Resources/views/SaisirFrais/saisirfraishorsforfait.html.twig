<div class="col-lg-12 col-md-12 text-center">
    <legend>ELEMENTS HORS FORFAIT</legend>
    <div class="col-lg-4 col-md-4">
        <form action="{{path('gsb_frais_validerfraishorsforfais')}}" method="post">
            <div class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">

                <fieldset>
                    <legend><h3>Nouveau frais hors forfait
                        </h3></legend>
                    <p>
                        <label class="control-label" for="txtDateHF">Date (jj/mm/aaaa): </label>
                        <input type="text" id="txtDateHF" name="dateFrais" class="form-control text-center" value="" placeholder="10/12/2017" size="10" maxlength="10">
                    </p>
                    <p>
                        <label class="control-label" for="txtLibelleHF">Libellé</label>
                        <input type="text" class="form-control text-center" id="txtLibelleHF" name="libelle" placeholder="repas d'affaires">
                    </p>
                    <p>

                        <label class="control-label" for="txtMontantHF">Montant</label>
                        <input type="text" class="form-control text-center" id="txtMontantHF" name="montant" placeholder="38">

                    </p>
                </fieldset>
                <p>
                    <button type="reset" id="effacer" class="btn btn-default">Effacer</button>
                    <button type="submit"  id="ajouter" class="btn btn-primary">Ajouter</button>

                </p> 
            </div>
        </form>
    </div>

    <div class="col-lg-8 col-md-8">
        <div class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
            <table id="TableFraisHF" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
                <!--<table class="table table-bordered table-hover table-striped"> -->
                <legend><h3>Descriptif des éléments hors forfait
                    </h3></legend>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Libellé</th>
                        <th>Montant</th>
                        <th class="action">&nbsp;</th>  
                    </tr>
                </thead>                                
                <tbody>                                                
                    {% for unfrais in  lesfraishorsforfait %}
                        {% set libelle = unfrais.libelle %}
                        {% set date = unfrais.date %}
                        {% set montant = unfrais.montant %}
                        {% set idfrais = unfrais.id %}
                        <tr>
                            <td>{{date}}</td>
                            <td>{{libelle}}</td>
                            <td>{{montant}}</td>
                            <td><a href="{{path('gsb_frais_supprimerfraishorsforfait',{'id' : idfrais})}}" 
                                   onclick="return confirm('Voulez-vous vraiment supprimer ce frais?');">Supprimer ce frais</a></td>
                        </tr>
                    {% endfor %} 
                </tbody>
            </table>
        </div>
    </div>
</div>