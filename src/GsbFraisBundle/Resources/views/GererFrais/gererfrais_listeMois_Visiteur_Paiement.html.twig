{% extends "GsbFraisBundle::accueil.html.twig" %}
{% block fraisforfait %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header text-center">
                Fiches de frais en attente en Paiement
            </h1>
            <br><br>
            {% for message in app.session.flashbag.get('info') %}
                <div class="text-center">
                    {{ message }}
                </div>
                <br><br>
            {% endfor %}
            
            <form action="" method="" class="form-horizontal" id="lstMoisPaiement">
                <div class="form-group" id="lstMois">
                    <label class="text-left col-sm-3 control-label">Selectionner le mois :</label>
                    <div class="col-sm-2">
                        <select class="form-control" id="choixMois" name="choixMois">
                            {% for unMois in  lesmois %}
                                {% set mois = unMois.mois %}
                                {% set numAnnee =  unMois.numAnnee %}
                                {% set numMois =  unMois.numMois%}
                                {% if moisAselectionner == mois %}
                                    <option selected value="{{ mois }}">{{ numMois }}/{{ numAnnee }} </option>
                                {% else %}
                                    <option value="{{ mois }}">{{ numMois }}/{{ numAnnee }} </option>
                                {% endif %}
                            {% endfor %}  
                        </select>
                    </div>
            </form>
            <br>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12"> 
        </hr>
        <form action="{{ path("gsb_frais_gererfraisMEP2") }}" method="POST" class="form-horizontal" id="listeVisiteurPaiement">
            <div class="form-group">
                <label class="text-left col-sm-3 control-label">Rechercher le visiteur m√©dical : </label>
                <div class="col-sm-2">
                    <select class="form-control" id="lstVisiteur" name="lstVisiteur">
                        {% for unVisiteur in  lesVisiteurs %}
                            <option value="{{ unVisiteur.id }}">{{ unVisiteur.prenom }} {{ unVisiteur.nom }} </option>
                        {% endfor %}  
                    </select>
                </div>
                <div>
                    <p>
                        <input type="submit" class="btn btn-default" value="Valider" />
                    </p> 
                </div>
        </form>
    </div>
</div>
</div>
{% endblock fraisforfait %}
